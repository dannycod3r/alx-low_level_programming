.PHONY: clean oclean fclean re

CC = gcc  # compiler

SRC = $(wildcard *.c)  # source files all c files

OBJ = $(SRC:.c=.o)   # corresponding object files

NAME = school

RM = rm -f  # the program to delete files

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c -o $@ $<

fclean: oclean clean

oclean:
	$(RM) $(OBJ)

clean:
	$(RM) $(NAME) *~ *.swp

re: fclean all
