.PHONY: clean oclean fclean re

CC := gcc  # compiler

CFLAGS:= -Wall -Werror -Wextra -pedantic

SRC := $(wildcard *.c)  # source files all c files

OBJ := $(SRC:.c=.o)   # corresponding object files

NAME := school

RM := rm -f  # the program to delete files

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

fclean: oclean clean

oclean:
	$(RM) $(OBJ)

clean:
	$(RM) $(NAME) *~ *.swp

re: fclean all
